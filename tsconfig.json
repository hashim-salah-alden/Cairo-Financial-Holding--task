{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true
  },
  // Specify the files that should be included and excluded in the compilation process
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}